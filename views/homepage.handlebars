<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-12">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>
      {{post.text}}
    </p>
    <p class="postInfo">Posted by {{post.user.username}} on {{format_date post.createdAt}}</p>
  </div>
</div> 
{{/each}}
<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-12">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>
      {{post.text}}
    </p>
    <p class="postInfo"><a class="postInfo" href="/post/{{post.id}}"><span class="commentLength" commentLength="{{post.comments.length}}">{{post.comments.length}}</span></a> | Posted by {{post.user.username}} on {{format_date post.createdAt}}</p>
  </div>
</div> 
{{/each}}
<script src="./js/homepage.js"></script>
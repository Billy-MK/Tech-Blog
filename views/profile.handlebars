<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form post">
      <div class="form-group">
        <label for="post-title">post title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-text">text:</label>
        <textarea class="form-input" id="post-text" name="post-text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2 post">
      <div class="col-sm-9">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div>
          <button class="btn btn-sm btn-info editButton postButton" data-id="{{post.id}}">EDIT</button>
          <button class="btn btn-sm btn-danger deleteButton postButton" data-id="{{post.id}}">DELETE</button>
      </div>
      <textarea class="editPostTextArea" id="textArea{{post.id}}">{{post.text}}</textarea>
      <button class="btn btn-sm btn-info confirmEditButton" id="editConfirm{{post.id}}" data-id="{{post.id}}">Confirm changes</button>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
